# Django Settings
# Generate a secret key: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-secret-key-here-generate-one
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# GitHub OAuth Configuration
# Get these from: https://github.com/settings/developers
GITHUB_CLIENT_ID=your-github-client-id-here
GITHUB_CLIENT_SECRET=your-github-client-secret-here

# Google Gemini AI
# Get free API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# Email Configuration (Gmail SMTP)
# Create app password: https://myaccount.google.com/apppasswords
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password

# Database (SQLite by default, production should use PostgreSQL)
DATABASE_URL=sqlite:///db.sqlite3

# Celery & Redis (default configuration)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

